{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* ---------- UPDATED: PATH ALIAS ---------- */
    "baseUrl": "./src",                    // <-- Change from "." to "./src"
    "paths": {
      "@/*": ["*"]                         // <-- Update paths mapping
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* ---------- ADD: IGNORE DEPRECATIONS ---------- */
    "ignoreDeprecations": "6.0"            // <-- Add this to silence the warning
  },
  "include": ["src", "vite-env.d.ts"]
}